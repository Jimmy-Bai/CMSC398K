{{#each post}}
<div class="container">
  <div class="card mt-4">
    {{!-- Card Header --}}
    <h5 class="card-header">
      <a href="/post/{{this.uuid}}">{{this.location}}</a>
      <span class="post-diff" id="{{this.uuid}}"></span>
      <script>timeDifference("{{this.post_date}}", "{{this.uuid}}");</script>
    </h5>
    {{!-- Card Body --}}
    <div class="card-body">
      {{!-- Post Information --}}
      <h5 class="card-title">From {{this.start_date}} to {{this.end_date}}</h5>
      <h5 class="card-title">{{this.type}}</h5>
      <p class="card-text">{{this.description}}</p>
      <button type="button" class="btn btn-outline-light" data-toggle="button" aria-pressed="false"
        autocomplete="off"><i class="fas fa-thumbs-up"></i>{{this.upvote}}</button>
      <button type="button" class="btn btn-outline-light" data-toggle="button" aria-pressed="false"
        autocomplete="off"><i class="fas fa-thumbs-down"></i>{{this.downvote}}</button>
    </div>
  </div>
</div>
{{else}}
<div class="container">
  <div class="card mt-4 post text-center">
    <div class="card-body card-error">
      <div>
        There are current no discounts/freebies. Come check back later!
      </div>
    </div>
  </div>
</div>
{{/each}}
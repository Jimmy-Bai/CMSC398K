{{#each post}}
<div class="container">
  <div class="card mt-4">
    {{!-- Card Header --}}
    <h5 class="card-header">
      <a href="/post/{{this.uuid}}" class="post-title">{{this.location}}</a>
      <span class="post-diff">{{timeDifference this.post_date}}</span>
    </h5>
    {{!-- Card Body --}}
    <div class="card-body">
      {{!-- Post Information --}}
      <div class="row card-title">
        <div class="col">
          From <span class="accent">{{this.start_date}}</span> to <span class="accent">{{this.end_date}}</span>
        </div>
        <div class="col type">
          <span>{{this.type}}</span>
        </div>
      </div>
      <p class="card-text">{{this.description}}</p>
      <button class="btn btn-custom-4"><i class="fas fa-eye"></i>{{this.views}}</button>
    </div>
  </div>
</div>
{{else}}
<div class="container">
  <div class="card mt-4 post text-center">
    <div class="card-body card-error">
      <div>
        {{code}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{#if post}}
<div class="container my-auto">
  <div class="card my-4">
    {{!-- Card Header --}}
    <h5 class="card-header">{{post.location}}
      <span class="post-diff">{{timeDifference post.post_date}}</span>
    </h5>
    {{!-- Card Body --}}
    <div class="card-body py-0 px-0">
      {{!-- Post Information --}}
      <div class="post-info py-3 px-3">
        <div class="row card-title">
          <div class="col">
            From <span class="accent">{{post.start_date}}</span> to <span class="accent">{{post.end_date}}</span>
          </div>
          <div class="col type">
            <span>{{post.type}}</span>
          </div>
        </div>
        <p class="card-text">{{post.description}}</p>
        <button class="btn btn-custom-4"><i class="fas fa-eye"></i>{{post.views}}</button>
      </div>
      {{!-- Map --}}
      <div class="map-frame">
        <iframe width="100%" height="500" src="{{url}}" frameborder="0" scrolling="no" marginheight="0"
          marginwidth="0"></iframe>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="container">
  <div class="card mt-4 post text-center">
    <div class="card-body card-error">
      <div>
        {{code}}
      </div>
    </div>
  </div>
</div>
{{/if}}
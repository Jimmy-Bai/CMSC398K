<div class="container my-auto">
  <div class="card my-4">
    {{!-- Card Header --}}
    <h5 class="card-header">{{post.location}}
      <span class="post-diff" id="{{post.uuid}}"></span>
      <script>timeDifference("{{post.post_date}}", "{{post.uuid}}");</script>
    </h5>
    {{!-- Card Body --}}
    <div class="card-body py-0 px-0">
      {{!-- Post Information --}}
      <div class="post-info py-3 px-3">
        <h5 class="card-title">From {{post.start_date}} to {{post.end_date}}</h5>
        <h5 class="card-title">Type: {{post.type}}</h5>
        <p class="card-text">{{post.description}}</p>
        <button type="button" class="btn btn-outline-light" data-toggle="button" aria-pressed="false"
          autocomplete="off"><i class="fas fa-thumbs-up"></i>{{post.upvote}}</button>
        <button type="button" class="btn btn-outline-light" data-toggle="button" aria-pressed="false"
          autocomplete="off"><i class="fas fa-thumbs-down"></i>{{post.downvote}}</button>
      </div>
      {{!-- Map --}}
      <div class="map-frame">
        <iframe width="100%" height="500" src="{{url}}" frameborder="0" scrolling="no" marginheight="0"
          marginwidth="0"></iframe>
      </div>
    </div>
  </div>
</div>
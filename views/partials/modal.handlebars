<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="add-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      {{!-- Modal Header --}}
      <div class="modal-header">
        <h5 class="modal-title" id="add-modal-label">Create new post</h5>
      </div>
      {{!-- Modal Body --}}
      <div class="modal-body py-0">
        <form method="POST" action="/add" onsubmit="event.preventDefault(); validateForm();" name="add_post">
          {{!-- Start Date & End Date (Duration) --}}
          <div class="form-row">
            <div class="form-group col-sm-6">
              <label class="col-form-label">Start date</label>
              <input type="text" class="form-control datepicker" name="start_date" placeholder="mm/dd/yyyy" required>
            </div>
            <div class="form-group col-sm-6">
              <label class="col-form-label">End date</label>
              <input type="text" class="form-control datepicker" name="end_date" placeholder="mm/dd/yyyy" required>
            </div>
          </div>
          {{!-- Location --}}
          <div class="form-row">
            <div class="form-group col">
              <label class="col-form-label">Location</label>
              <input type="text" class="form-control" id="autocomplete-modal" name="location" placeholder="Location..." required>
              <label class="col-form-label" id="no-match" name="location-match"></label>
            </div>
          </div>
          {{!-- Discount Type --}}
          <label class="col-form-label">Offer Type</label>
          <div class="form-row">
            <div class="form-group col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="discount_type" value="Freebies" required>
                <label class="form-check-label">Free</label>
              </div>
            </div>
            <div class="form-group col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="discount_type" value="Discounts" required>
                <label class="form-check-label">Discount</label>
              </div>
            </div>
          </div>
          {{!-- Description --}}
          <div class="form-row">
            <div class="form-group col">
              <label for="post-description" class="col-form-label">Description</label>
              <textarea class="form-control" name="post_description" placeholder="Description..." required></textarea>
            </div>
          </div>
          {{!-- Modal Footer --}}
          <div class="modal-footer px-0">
            <button type="button" class="btn btn-custom-2" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary btn-custom-1">Add post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>